package com.koo.main;

import java.util.List;
import java.util.Scanner;

import com.koo.dao.SakilaDao;
import com.koo.model.Film;

public class SakilaMain {
	
	private static Scanner scanner;

	public static void main(String[] args) {
		scanner = new Scanner(System.in);
		String inputString;
		String genre;
		
		while(true) {
			System.out.println("Select Menu");
			System.out.println("====================");
			System.out.println("a. Films by genre");
			System.out.println("q. Quit");
			System.out.print("> ");
			inputString = scanner.nextLine();
			
			switch(inputString) {
			case "a":
				System.out.print("genre: ");
				genre = scanner.nextLine();
				getFilmsByGenre(genre);
				break;
			case "q":
				scanner.close();
				System.exit(0);
				break;
			}
			
		}
	
	}
	
	private static void getFilmsByGenre(String genre) {
		SakilaDao sakil = new SakilaDao();
		List<Film> films = sakil.getFilms(genre);
		for(Film film: films) {
			System.out.print(film.filmId());
			System.out.print(" ");
			System.out.print(film.title());
			System.out.print(" ");
			System.out.print(film.genre());
			System.out.print(" ");
			System.out.print(film.releaseYear());
			System.out.print(" ");
			System.out.println(film.langueage());
		}
		System.out.println();
		
	}
	
}
