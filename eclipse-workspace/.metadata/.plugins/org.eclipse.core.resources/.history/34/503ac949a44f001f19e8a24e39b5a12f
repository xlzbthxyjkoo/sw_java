import java.sql.ResultSet;


public class SakilaMain {
	public static void main(String[] args) {
		Connection conn;
		ResultSet rSet; 
		PreparedStatement pStmt;
		
		String url = "jdbc:mysql://localhost:3306/sakila?serverTimeZone=UTC";
		String username = "koo";
		String password = "1234";
		
		try {
			conn = DriverManager.getConnection(url, username, password);
			
			StringBuffer sb = new StringBuffer();
			sb.append("select FL.film_id, FL.title,CG.name as genre");
			sb.append(", FL.release_year, L.nam as language ");
			sb.append("from film FL join film_category FC on FL.film_id = FC.film_id ");
		} catch (Exception e) {
			
		}
		
		
	}

}
