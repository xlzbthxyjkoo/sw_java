package com.koo.main;

import java.util.Scanner;

import com.koo.service.JobFactory;
import com.koo.service.SakilaWork;


public class SakilaMain {
	
	private static Scanner scanner;

	public static void main(String[] args) {
	
		scanner = new Scanner(System.in);
		String inputString;
		
		while(true) {
			System.out.println("Select Menu");
			System.out.println("====================");
			System.out.println("a. Films by genre");
			System.out.println("b. Titles by actor");
			System.out.println("q. Quit");
			System.out.print("> ");
			inputString = scanner.nextLine();
			
			SakilaWork work = new JobFactory().createJob(inputString, scanner);
			if(work != null) {
				work.getInfo();
				work = null;
			}
			System.out.println();
			
		}
	
	}
	
	
}
